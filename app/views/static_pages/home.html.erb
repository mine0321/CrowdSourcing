<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>仕事</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>ナレッジソースへようこそ！</h1>

    <h2>
    退職した高齢者に仕事を依頼しましょう
    </h2>

    <%= link_to "新しくアカウントを作る", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
  <div class="home-content1">
    <%= link_to image_tag("wakaba01.png", alt: "wakaba"), root_path, id: "logo" %>
    <h2>ナレッジソースはじめてガイド</h2>
  </div>
<div class="home-content2">

<div class="span3 content1-detail">
<h3>ナレッジソースとは？</h3>
</div>
<div class="span3 content1-detail">
<h3>どんな仕事がある？</h3>
</div>
<div class="span3 content1-detail">
<h3>どうやって使うの？</h3>
</div>  
</div>

<% end %>