<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>ハイクラス高齢者向けクラウドソーシングへようこそ！</h1>

    <h2>
    退職した高齢者に仕事を依頼しましょう

    </h2>

    <%= link_to "新しくアカウントを作る", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>