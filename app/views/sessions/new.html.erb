<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.submit "ログインする", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>まだアカウントを作成していない方は<%= link_to "こちら", signup_path %></p>
  </div>
</div>